{
  "manifest_version": 3,
  "name": "PrivacyAI - Privacy Policy Analyzer",
  "version": "2.0",
  "description": "AI-powered privacy policy analysis using Perplexity AI for any website you visit",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.perplexity.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PrivacyAI - Analyze Privacy Policy",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
